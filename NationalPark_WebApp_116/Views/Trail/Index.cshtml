<div class="row">
    <div class="col-9">
        <h2 class="text-primary">Trail List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-info form-control text-white">
            <i class="fas fa-plus"></i>&nbsp; Add New Trail
        </a>
    </div>
</div>

<div class="container rounded border p-3 m-3">
    <table id="tblData" class="table table-bordered table-active table-hover table-striped">
        <thead>
            <tr>
                <th>National Park</th>
                <th>Trail Name</th>
                <th>Distance</th>
                <th>Elevation</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/trail.js"></script>
}