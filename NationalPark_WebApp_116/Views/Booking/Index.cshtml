@model NationalPark_WebApp_116.Models.BookingTicket
@using Microsoft.Extensions.Options
@inject IOptions<NationalPark_WebApp_116.Models.StripeSettings> stripe;

<h2 class="text-primary text-center">Details for Tickets Booking</h2>

<div class="container rounded border p-2 m-2">
    <form method="post">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Address">Address:</label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="form-group">
            <label for="PhoneNumber">PhoneNumber:</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Age">Age:</label>
            <input asp-for="Age" class="form-control" />
        </div>
        <div class="form-group">
            <label for="ChildrenCount">Number of Children:</label>
            <input type="number" asp-for="ChildrenCount" class="form-control" min="0" />
        </div>
        <div class="form-group">
            <label for="AdultCount">Number of Adult:</label>
            <input type="number" asp-for="AdultCount" class="form-control" min="0" />
        </div>
        <div class="form-group">
            <label for="DateTime">DateTime</label>
            <input type ="datetime-local" asp-for="DateTime" class="form-control" min="0" />
        </div>


        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-8 pt-2">
                    @* @{
                        var totalAmount = Model.Amount * 100;
                    } *@
                    <script src="https://checkout.stripe.com/checkout.js"
                            class="stripe-button"
                            data-key="@stripe.Value.PublishableKey"
                            data-name="API Consumption"
                            data-description="Book Tickets To Visit"
                            data-locale="auto"
                            data-label="Order Tickets"
                            data-allow-remember-me="false"
                            data-image="https://stripe.com/img/documentation/checkout/marketplace.png">
                    </script>
                    <script>
                        var el = document.getElementsByClassName('stripe-button-el');
                        el[0].style.display = "none";
                    </script>
               
                </div>
                <div class="col-12 col-md-4">
                    <button type="submit" @* value="Place Order" *@ class="btn btn-success form-control">Book Ticket(s)</button>
                </div>
            </div>
        </div>


     @*    <button type="submit" class="btn btn-success">
            <i class="fas fa-check-circle"></i>&nbsp;Book Ticket(s)
            </button> *@
    </form>
</div>